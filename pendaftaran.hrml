            <article>
                <h1>FORM JADWAL RAPAT</h1>
                <div id="content">
                    <form action="proses.php" method="POST" enctype="multipart/form-data">
                        <fieldset>
                            <legend>Informasi Pribadi</legend>
                            <label for="nama">Nama Lengkap</label>
                            <input type="text" id="nama" name="nama" required><br><br>
    
                            <label for="no_telpon">No Telepon:</label>
                            <input type="tel" id="no_telpon" name="no_telpon" pattern="[0-9]{10,12}" required><br><br>
    
                            <label for="email">Alamat Email:</label>
                            <input type="email" id="email" name="email" required><br><br>
    
                            <label for="tanggal_lahir">Tanggal lahir:</label>
                            <input type="date" id="tanggal_lahir" name="tanggal_lahir" required><br><br>
                        </fieldset>
                        <fieldset>
                            <legend>Permintaan Pertemuan</legend>
                            <label for="tujuan">Tujuan Pertemuan</label>
                            <input type="text" id="tujuan" name="tujuan" required><br><br>
    
                            <label for="vol">Tingkat Kepentingan Pertemuan</label>
                            <input type="range" id="vol" name="vol" min="0" max="10" required><br><br>
    
                            <label for="tanggal">Pilih tanggal:</label>
                            <input type="date" id="tanggal" name="tanggal" required><br><br>
    
                            <label for="appt">Pilih waktu:</label>
                            <input type="time" id="appt" name="appt" required><br><br>
                        </fieldset><br><br>
                        <button type="submit">SUBMIT</button>
                    </form>
                </div>
            </article>
